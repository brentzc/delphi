<div ...attributes>
    {{#if @label}}
        <label class="block text-blue-700 text-sm font-display mb-2">
            {{@label}}
        </label>
    {{/if}}
    <div class="inline-block relative w-64">
        <select
            class="block appearance-none bg-gray-200 font-body text-gray-700 border border-gray-200 w-full py-3 px-4 focus:outline-none focus:shadow-outline focus:bg-white rounded-l"
            {{on "change" this.select}}
        >
            {{#each @options as |choice|}}
                {{#let (eq choice @selected) as |isSelected|}}
                    {{#if isSelected}}
                        <option selected="selected">{{choice}}</option>
                    {{else}}
                        <option>{{choice}}</option>
                    {{/if}}
                {{/let}}
            {{/each}}
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
            <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
    </div>
</div>